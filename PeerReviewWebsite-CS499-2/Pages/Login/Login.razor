@page "/"
@using PeerReviewWebsite.Classes.Data.Login
@inject NavigationManager UriHelper
@inherits OwningComponentBase<UserService>

<h1> Welcome to Online Peer Review! </h1>

<head>
    <title>Login</title>
</head>

<body>
    <form action="">
        <div>
            <h1> Login </h1>
        </div>

        <div>
            <!-- Add the Username & Password textfields and interative buttons-->
            <input type="text" placeholder="Username" id="username" @bind-value=@username required><br><br>
            <input type="password" placeholder="Password" id="password" @bind-value=@password required><br><br><br>

            <!-- Don't use type="submit"! it breaks things!-->
            <button type="button" class="btn btn-primary" @onclick="LogInUser">Login</button><br>
            <p>Don't have an account?  <NavLink class="nav-link" href="register">Register</NavLink></p>
        </div>
    </form>
</body>

@code {

    public string username = "";
    private string password = "";

    /// <summary>
    /// Gets the user, if it exists, then logs them in
    /// </summary>
    private async Task LogInUser() {
        User user = await Service.GetUserAsync(username);
        if (user is null) {
            Console.WriteLine($"Could not find user with the given username: {username}");
            return;
        }

        Console.WriteLine("Found user!");

        PrintInput();
        UriHelper.NavigateTo($"/profile/{username}");
    }

    /// <summary>
    /// Checking that input is being properly grabbed
    /// </summary>
    private void PrintInput()
    {
        Console.WriteLine("Username entered was " + username);
        Console.WriteLine("Password entered was " + password);
    }

}
