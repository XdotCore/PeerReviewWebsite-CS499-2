@page "/"
@using PeerReviewWebsite.Classes.Data.Login
@inherits OwningComponentBase<UserService>

<h1> Welcome to Online Peer Review! </h1>

<head>
    <title>Login</title>
</head>

<body>
    <form action="">
        <div>
            <h1> Login </h1>
        </div>

        <div>
            <!-- Add the Username & Password textfields and interative buttons-->
            <input type="text" placeholder="Username" id="username" @bind-value=@uname required><br><br>
            <input type="password" placeholder="Password" id="password" @bind-value=@psword required><br><br><br>

            <button type="submit" class="btn btn-primary" @onclick="PrintInput">Login</button><br>
            <p>Don't have an account?  <NavLink class="nav-link" href="register">Register</NavLink></p>
        </div>
    </form>
</body>

@code {
    
    public string uname = "";
    private string psword = "";

    <!--Checking that input is being properly grabbed-->
    private void PrintInput()
    {
        Console.Write("Username entered was " + uname + "\n");
        Console.Write("Password entered was " + psword + "\n");
    }

}
