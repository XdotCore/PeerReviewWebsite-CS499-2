@page "/register"

<h1>Registration Form</h1>
<head>
    <title>Register</title>
</head>

<body>
    <form action="">
        <div>
            <h2>Create a New Account</h2>
        </div>

        <div>
            <!-- First Name -->
            <input type="text" placeholder="First Name" id="firstname" @bind-value=@fname><br><br>

            <!-- Last Name -->
            <input type="text" placeholder="Last Name" id="lastname" @bind-value=@lname required><br><br>

            <!-- Password -->
            <input type="password" placeholder="Password" id="password" @bind-value=@psword required><br><br>

            <!-- Confirm Password -->
            <input type="password" placeholder="Confirm Password" id="conpassword" @bind-value=@conpassword required><br><br>

            <button type="submit" class="btn btn-primary" @onclick="confirmPassword">Create Account</button><br>
            <p>Already have an account?  <NavLink class="nav-link" href="/">Login</NavLink></p>
        </div>
    </form>

    <!--Field that appears when passwords do not match [this isn't finished/implemented]-->
    <br>
    <form hidden id="errorForm">
        <br>
        <label id="pswordlabel" for="password">! Passwords didn't match</label>
        <br><br>
    </form>

</body>

@code {

    private string fname = "";
    private string lname = "";
    private string psword = "";
    private string conpassword = "";

    <!--Checking that input is being properly grabbed-->
    private void PrintInput()
    {
        Console.Write("Username entered was " + fname);
        Console.Write("Password entered was " + lname);
        Console.Write("Password entered was" + psword);
        Console.Write("Confirm Password was" + conpassword);
    }

    <!--Check that the Passowords match[this isn't finished]-->
    private void confirmPassword()
    {
        if (String.Equals(psword, conpassword))
            PrintInput();

        else
            Console.Write("Passwords did not match");
    }

}
