@page "/home"

@using PeerReviewWebsite.Classes.Data.Account
@inject MyStateContainer myStateContainer
@inherits OwningComponentBase<AccountService>

<body>

    <NavigationBar activePage=NavigationBar.Page.Home showModeratorPage=isModerator />

    <h1> Home Page </h1>

    <p>Here's where can put announcements and updates</p>

</body>

<Footer/>

@code {
    private User user;
    private bool isModerator;
    protected override async Task OnInitializedAsync()
    {
        user = myStateContainer.Value;
        isModerator = await Service.UserIsModerator(user);
    }
}