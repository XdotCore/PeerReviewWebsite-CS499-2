<ul>
    <li class="left"><a class=@GetClass(Page.Home) href="/home"><i class="bi-house-fill"></i> Home</a></li>
    <li class="left"><a class=@GetClass(Page.Explore) href="/explore"><i class="bi-search"></i> Explore</a></li>
    <li class="left"><a class=@GetClass(Page.Author) href="/author"><i class="bi-pencil-fill"></i> Author</a></li>
    <li class="left"><a class=@GetClass(Page.Reviewer) href="/reviewer"><i class="bi-patch-check-fill"></i> Reviewer</a></li>
    <li class="left"><a class=@GetClass(Page.Profile) href="/profile"><i class="bi-person-circle"></i> Profile</a></li>
    <li class="right"><a class=@GetClass(Page.LogOut) href="/"><i class="bi-box-arrow-right"></i> Log Out</a></li>
    @if (showModeratorPage) {
        <li class="right"><a class=@GetClass(Page.Moderator) href="/moderator"><i class="bi-chat-right-text-fill"></i> Moderator</a></li>
    }
</ul>

@code {
    public enum Page {
        Home,
        Explore,
        Author,
        Reviewer,
        Moderator,
        Profile,
        LogOut
    }

    [Parameter]
    public Page activePage { get; set; }

    [Parameter]
    public bool showModeratorPage { get; set; }
    public bool showAuthorPage { get; set; }
    public bool showReviewerPage { get; set; }

    protected override async Task OnInitializedAsync() {

    }

    private string GetClass(Page page) => activePage == page ? "active" : "";
}
