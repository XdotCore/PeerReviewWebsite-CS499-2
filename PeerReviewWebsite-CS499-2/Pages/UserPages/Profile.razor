@page "/profile"

@using PeerReviewWebsite.Classes.Data
@using PeerReviewWebsite.Classes.Data.Account
@inject MyStateContainer state
@inherits OwningComponentBase<AccountService>

<PageTitle>Profile</PageTitle>

<body>

    <NavigationBar activePage=NavigationBar.Page.Profile showModeratorPage=isModerator/>

    <h1>Hello @state.User.FirstName @state.User.LastName!</h1>
    <h2> Profile Page </h2>

    <p>User Id: @state.User.Id</p>
    <p>Email: @state.User.Email </p>

</body>

<Footer />

@code {
    private bool isModerator;
    protected override async Task OnInitializedAsync()
    {
        isModerator = await Service.UserIsModerator(state.User);
    }
}