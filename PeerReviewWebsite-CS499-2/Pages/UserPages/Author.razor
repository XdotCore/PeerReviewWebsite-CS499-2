@page "/author"
@using PeerReviewWebsite.Classes.Data.Account
@inject MyStateContainer myStateContainer
@inherits OwningComponentBase<AccountService>

<body>

    <ul>
        <li><a class="active" href="@("/home")">Home</a></li>
        <li><a href="@("/explore")">Explore</a></li>
        <li><a class="active" href="@("/author")">Author</a></li>
        <li><a href=@("/profile")>Profile</a></li>
        <li><a href=@("/")>Sign Out</a></li>
    </ul>

    <h1> Author Page </h1>

    <p> Only those with Author role status will be able access to this page </p>
    <p>Will include an upload button and list of previously uploaded documents </p>

