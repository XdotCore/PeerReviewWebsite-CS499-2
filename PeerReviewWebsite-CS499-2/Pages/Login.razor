<h1> Welcome to Online Peer Review! </h1>

<head>
    <title>Login</title>
    <style>
        <!--Wasn't able to get the razor file to link to css file-->
        h1 {
            text-align: center;
        }

        button {
            background-color: #030804;
            color: white;
            padding: 14px 20px;
            border-radius: 50px;
            margin: 7px auto;
            width: 75%;
            font-size: 12px;
            text-align: center;
            border: 2px white;
        }
        input {
            margin: auto;
            border-radius: 5px;
            padding: 14px 20px;
            width: 75%;
            box-sizing: border-box;
            border: 2px white;
        }
        form {
            width: 30rem;
            margin: auto;
            color: whitesmoke;
            backdrop-filter: blur(16px) saturate(180%);
            -webkit-backdrop-filter: blur(16px) saturate(180%);
            background-color: rgba(85, 82, 82, 0.582);
            border-radius: 12px;
            border: 1px solid rgba(255, 255, 255, 0.125);
            text-align: center;
        }

    </style>
</head>

<body>
    <form action="">
        <div>
            <h1> Login </h1>
        </div>

        <div>
            <!-- Add the Username & Password textfields and interative buttons-->
            <input type="text" placeholder="Username" id="username" @bind-value=@uname required><br><br>
            <input type="password" placeholder="Password" id="password" @bind-value=@psword required><br><br><br>

            <button type="submit" class="btn btn-primary" @onclick="PrintInput">Login</button><br>
            <p>Don't have an account?  <NavLink class="nav-link" href="register">Register</NavLink></p>
        </div>
    </form>
</body>

@code {
    
    public string uname = "";
    private string psword = "";

    <!--Checking that input is being properly grabbed-->
    private void PrintInput()
    {
        Console.Write("Username entered was " + uname + "\n");
        Console.Write("Password entered was " + psword + "\n");
    }

}
